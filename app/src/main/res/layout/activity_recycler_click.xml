<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:onClick="onClick"
    tools:context=".Controllers.RecyclerViewClick">

    <LinearLayout
        android:id="@+id/mainLayout"
        android:layout_width="412dp"
        android:layout_height="224dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.571"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:id="@+id/modelLayout"
            android:layout_width="match_parent"
            android:layout_height="29dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/modelN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Model" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/locationLayout"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/locationN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/remainLayout"
            android:layout_width="match_parent"
            android:layout_height="31dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/priceN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/priceLayout"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/bookedUID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Booked UID" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bookLayout"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/maxCa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Max Capacity" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/maxLayout"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/reCa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Remaining Capacity" />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/buttonReservedRide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="Book Ride"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.114"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.732" />

    <Button
        android:id="@+id/buttonCloseRide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Close Ride"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.745"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.732" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:scaleType="centerCrop"
        android:layout_margin="5dp"

        android:adjustViewBounds="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        tools:srcCompat="@tools:sample/avatars" />


</androidx.constraintlayout.widget.ConstraintLayout>